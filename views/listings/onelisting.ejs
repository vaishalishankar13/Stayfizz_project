<% layout('/layouts/boilerplate.ejs') %>
    <body>
<div class="row mt-5">
<div class="col-7 offset-2 ">
<div class="card mt-2">
  <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_img">
  </div>
  <div class="col-10">
  <div class="card-body ">
    <p class="card-text"><b><%=listing.title%></b><br>
      owned by:<%=listing.owner.username%><br>
        <%=listing.description%><br>
        &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
        <%=listing.location%><br>
        <%=listing.country%>

    </p>
    </div>
  </div>
</div>
<!-- <p><%=currUser%></p> -->
<% if(currUser && listing.owner._id.equals(currUser._id)){%> 
<form method="get" action="http://localhost:8080/listings/<%=listing._id%>/edit">
               <button class="btn btn-dark offset-2 mb-2">Edit</button>
              
               </form>
               <br>
               <form method="post" action="http://localhost:8080/listings/<%=listing._id%>?_method=delete">
                <button class="btn btn-dark offset-2">Delete</button>
               </form>
<%}%> 
<% if(currUser){%> 
<div class="col-7 offset-2 "><h4>Leave your Review</h4>
  <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
  <fieldset class="starability-grow">
  <legend>Rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
  <br>
  <label for="comment" class="form-label">Comment</label>
  <input type="text" id="comment" name="review[comment]" class="form-control" required>
   <div class="invalid-feedback">
       comment is required
      </div>
  <button class="btn btn-dark mt-1">Submit</button>
  </form>
</div>
 <%}%> 

<div class="col-7 offset-2 ">
  <h4>All reviews</h4>
  <div class="row">
  <% for (review of listing.reviews){ %>
    <div class="card review-card col-6 mb-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@<%= review.author.username %></h5>
    <p class="starability-result card-text" data-rating=<%= review.rating %>></p>
    <p class="card-text"><%= review.comment %></p>
  
     <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=delete" method="post">
      <button class="btn btn-dark">Delete</button>
     </form>
  </div>
</div>
    <!-- <p><%=review.comment%></p>
    <p><%=review.rating%> stars</p> -->
<%}%>
</div>

</div>

